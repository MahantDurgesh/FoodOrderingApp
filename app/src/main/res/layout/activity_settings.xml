<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:backgroundTint="#1B1A1A"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:text="Your Profile.
let us know what we can do for you dear customer, here you can check your profile."
            android:textColor="#fff"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/emailsettings"
            android:layout_width="354dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="#000"
            android:gravity="center"
            android:text="Email"
            android:textAlignment="center"

            android:textSize="20dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/namesettings"
            android:layout_width="354dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="#000"
            android:gravity="center"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/contactsettings"
            android:layout_width="354dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="#000"
            android:gravity="center"
            android:text="Contact"
            android:textAlignment="center"
            android:textSize="20dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordlayout"
            android:layout_width="354dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:padding="1dp"
            android:textColorHint="#000"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:hintTextColor="#000"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resetpasswordedittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp">


            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/resetpasswordbutton"
            android:layout_width="354dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:backgroundTint="#171717"
            android:foregroundTint="#3E3C3C"
            android:text="Change Password"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/signoutbutton"
            android:layout_width="354dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="Signout"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />



        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="#000"
            app:itemIconTint="#fff"
            app:itemTextColor="#000"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>